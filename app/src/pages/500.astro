---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
	error: unknown;
}

const { error } = Astro.props;
const message = error instanceof Error ? error.message : "Unknown error";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="flex flex-col min-h-screen justify-center items-center bg-red-50 p-6">
    <div class="flex items-start gap-4 bg-red-50 p-6 rounded-2xl shadow-md border border-red-200 max-w-md w-full">
      <!-- Icon -->
      <div class="flex-shrink-0">
        <svg
          class="h-8 w-8 text-red-500"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 9v2m0 4h.01M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z" />
        </svg>
      </div>

      <!-- Nội dung -->
      <div>
        <h2 class="text-lg font-semibold text-red-700">Có lỗi xảy ra</h2>
        <p class="mt-1 text-sm text-red-600">
          {message}
        </p>
      </div>
    </div>

    <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
  }
</style>


